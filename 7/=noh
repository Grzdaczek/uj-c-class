#include <stdlib.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>

#define ERR_FOPEN "An error occurred while opening the file."

char* tocapital(char* a) {
    int i;
    char* b = malloc(strlen(a)+1);
    strcpy(b, a);
    for (i=1; i < strlen(b); i++) b[i] = tolower(b[i]);
    return b;
}

